{
  "id": "SAMP_TEXTURE",
  "label": "SampTexture",
  "category": "Generator",
  "description": "Loads an external image texture and outputs RGBA + individual channels.",
  "locales": {
    "zh": {
      "samptexture": "采样纹理",
      "Loads an external image texture and outputs RGBA + individual channels.": "加载外部图片纹理，并输出 RGBA 以及单独通道。",
      "image": "图片"
    }
  },
  "data": {
    "glsl": "void run(vec2 uv, vec2 uv_in, sampler2D image, out vec4 result, out float r, out float g, out float b, out float a) {\n  vec2 coord = (uv_in == vec2(0.0)) ? uv : uv_in;\n  result = texture2D(image, coord);\n  r = result.r;\n  g = result.g;\n  b = result.b;\n  a = result.a;\n}",
    "inputs": [
      {
        "id": "uv_in",
        "name": "uv_in",
        "type": "vec2"
      },
      {
        "id": "image",
        "name": "image",
        "type": "sampler2D"
      }
    ],
    "outputs": [
      {
        "id": "result",
        "name": "result",
        "type": "vec4"
      },
      {
        "id": "r",
        "name": "r",
        "type": "float"
      },
      {
        "id": "g",
        "name": "g",
        "type": "float"
      },
      {
        "id": "b",
        "name": "b",
        "type": "float"
      },
      {
        "id": "a",
        "name": "a",
        "type": "float"
      }
    ],
    "uniforms": {
      "uv_in": {
        "type": "vec2",
        "value": [
          0,
          0
        ]
      },
      "image": {
        "type": "sampler2D",
        "value": null
      }
    },
    "outputType": "vec4"
  }
}